@model RegisterViewModel
@{
    ViewData["Title"] = "Registrace";
}
<div class="container">
    <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
    <div class="row mt-4 text-center"> 
        <h1 class="mb-0">Vytvoření nového účtu</h1>
    </div>
    <div class="row justify-content-center">
        <div class="col-3 col-md-1">
            <hr class="mb-md-5"/>
        </div>
    </div>
    <div class="row">
        <div class="col-12 col-md-4">
            <div class="form-group mb-2 mb-md-0">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" placeholder="jmeno@email.cz"/>
                <span asp-validation-for="Email" class="text-danger fw-bold"></span>
            </div>
        </div>
        <div class="col-12 col-md-4">
            <div class="form-group mb-2 mb-md-0">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" placeholder="SuperSilneHeslo"/>
                <span asp-validation-for="Password" class="text-danger fw-bold"></span>
            </div>
        </div>
        <div class="col-12 col-md-4">
            <div class="form-group">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control" placeholder="SuperSilneHeslo"/>
                <span asp-validation-for="ConfirmPassword" class="text-danger fw-bold"></span>
            </div>
        </div>
        <hr class="mt-4 my-md-5" />
    </div>
    <div class="row">
        <div class="col mb-2 mb-md-3">
            <h3>Osobní údaje</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-12 col-md-6">
            <div class="form-group">
                <label asp-for="IdNumber"></label>
                <input asp-for="IdNumber" class="form-control" placeholder="987654321"/>
                <span asp-validation-for="IdNumber" class="text-danger fw-bold"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12 col-md">
            <div class="form-group">
                <label asp-for="FirstName"></label>
                <input asp-for="FirstName" class="form-control" placeholder="Alfons"/>
                <span asp-validation-for="FirstName" class="text-danger fw-bold"></span>
            </div>
        </div>
        <div class="col-12 col-md">
            <div class="form-group">
                <label asp-for="LastName"></label>
                <input asp-for="LastName" class="form-control" placeholder="Mucha"/>
                <span asp-validation-for="LastName" class="text-danger fw-bold"></span>
            </div>
        </div>
    </div>
    <div class="row mt-5 justify-content-center">
        <div class="col text-center">
            <button type="submit" class="btn btn-outline-success btn-lg fw-bold">Registrovat</button>
        </div>
    </div>
    <div class="row justify-content-center text-center mt-5">
        <div class="col col-md-4">
            <h4>Již máte svůj účet?</h4>
            <div class="form-group fw-bold">
                <p>
                    <a asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" class="btn btn-outline-primary">Přihlásit se</a>
                </p>
            </div>
        </div>
    </div>
    </form>
</div>


@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
