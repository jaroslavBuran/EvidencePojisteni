        </div>
    </div>
    <div class="row justify-content-center my-0 my-md-4">
        <div class="col-2 col-md-1"><hr/></div>
    </div>
    <div class="row">
        <div class="col text-center">
            @if (!this.User.Identity.IsAuthenticated)
            {
                <h1 class="display-4">Pro pokračování se prosím <a asp-controller="Account" asp-action="Login">přihlašte.</a></h1>
